<div class="body">
  <div class="container mt-5">
    <div class="row">
      <div class="mx-auto">
        <h2>チーム選択</h2>
          <div class="team-select">
            <h4>既にチームに加入している方</h4>
            <%= form_with model:@team, local: true do |f| %>
              <%= f.collection_select(:team_id, @teams, :id, :teamname ) %>
            <% end %>
          </div>
          <div class="row">
            <div class="new-team">
              <h4>新しくチームを作る方</h4>
              <%= form_with model:@team, local: true do |f| %>
                <div class="field">
                  <label for="teamname">チーム名</label>
                  <div class="row">
                    <%= f.text_field :teamname, class: 'col-xs-12' %>
                  </div>
                </div>
                <div class="field">
                  <label for="prefecture_code">都道府県</label>
                  <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name %>
                </div>
                <div class="field">
                  <label for="city">市町村</label>
                  <%= f.text_field :city %>
                </div>
              </div>
              <div class="row">
                <%= f.submit "登録する", class: "btn btn-info btn-block" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
